{
    "name": "ニコニコ共同墓地",
    "version": "3.0",
    "manifest_version": 2,
    "description": "削除動画を開くと共同墓地に移動します",
    "permissions": [
        "storage"
    ],
    "icons": {
        "16": "16.png",
        "48": "48.png",
        "128": "128.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.nicovideo.jp/*",
                "https://sp.nicovideo.jp/*"
            ],
            "js": [
                "jquery-3.6.0.min.js",
                "main.js"
            ]
        }
    ],
    "browser_action": {
        "default_popup": "popup.html"
    },
    "options_ui": {
        "page": "options.html",
        "open_in_tab": true
    }
}
